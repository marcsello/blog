{% extends "base.html.j2" %}
{% block content %}
    <div>
        Hi! This is my blog.
    </div>
    <div>
        <ul>
            {% for post in posts %}
                <li><a href="/{{ post.output_dir }}/">{{ post.meta.title }}</a></li>
            {% endfor %}
        </ul>
    </div>
    <div>
        <ul>
            {% for tag in tags %}
                <li><a href="/tag/{{ tag }}.html">{{ tag }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}